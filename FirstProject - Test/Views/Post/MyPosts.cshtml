@using FirstProjectRepository.DBModels;
@model List<Post>

<h2>My Posts</h2>

@if (Model.Count == 0)
{
    <p>No posts found.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Url</th>
                <th>Content</th>
                <th>Posted At</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var post in Model)
            {
                <tr>
                    <td>@post.title</td>
                    <td>@post.url</td>
                    <td>@post.text</td>
                    <td>@post.createdAt</td>
                    <td>
                        <a href="@Url.Action("Edit", "Post", new { id = post.postId })">Edit</a> |
                        <a href="@Url.Action("Delete", "Post", new { id = post.postId})">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}